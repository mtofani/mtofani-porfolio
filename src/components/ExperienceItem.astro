---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
  milestones: string
}

const { title, company, description, link, date, milestones } = Astro.props
---

<div
  class="relative  grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
> 
  <div class="relative pb-1 md:col-span-2">
    <div class="sticky top-0 ">
      <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">{company}</h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
    </div>
  </div>
  <div class="flex flex-col w-full mb-5 max-w-prose text-md md:px-8  text-gray-600  dark:text-gray-300 md:col-span-3 whitespace-pre-line leading-loose">
    <p class="">{description}
    
     <p><strong class="py-2 text-sm text-yellow-400 whitespace-pre-line leading-loose">{milestones}</strong></p>
    </p>
    {
      link && (

    
        <LinkInline  href={link}>
          
        
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          > 
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        
        </LinkInline>
        
      
      )
    }
  </div>
</div>
