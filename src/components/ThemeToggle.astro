---
import SunIcon from "./icons/Sun.astro"
import MoonIcon from "./icons/Moon.astro"
import SystemIcon from "./icons/System.astro"

const THEMES = ["Dark"]  // Solo tema oscuro
---

<div class="relative ml-1 mr-1">
  <!-- El menú ya no es necesario si solo usas un tema oscuro -->
</div>

<style>
  #themes-menu.open {
    display: inline;
    animation: scale-up-center 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }

  @keyframes scale-up-center {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>

<script is:inline>
  // Elimina todas las referencias a matchMedia y otras preferencias del sistema
  const updateTheme = () => {
    // Forzar siempre tema oscuro
    document.documentElement.classList.add("dark");
  }

  // Forzar tema oscuro al cargar la página
  updateTheme();

  // Puedes eliminar la lógica del menú si ya no se cambia de tema
  document.addEventListener("click", () => {
    const themesMenu = document.getElementById("themes-menu");
    themesMenu && themesMenu.classList.remove("open");
  });
</script>
